<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prateek.demosdkcheck.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView" />


    <!--Apna Player start ke liye layout start-->
    <RelativeLayout
        android:id="@+id/layoutParentContainer"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@android:color/black">

        <com.videotap.android.player.smart.SmartPlayerView
            android:id="@+id/smartPlayerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.videotap.android.player.smart.SmartPlayerView>

    </RelativeLayout>
    <!--Apna Player start ke liye layout end-->
</RelativeLayout>
